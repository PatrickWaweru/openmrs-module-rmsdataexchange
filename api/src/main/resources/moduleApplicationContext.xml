    <!-- Wraps RmsdataexchangeService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="rmsdataexchange.RmsdataexchangeService"
            class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.rmsdataexchange.api.impl.RmsdataexchangeServiceImpl">
                <property name="dao" ref="rmsdataexchange.RmsdataexchangeDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <!-- Adds RmsdataexchangeService to OpenMRS context so it can be accessed
    calling Context.getService(RmsdataexchangeService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.rmsdataexchange.api.RmsdataexchangeService</value>
                <ref bean="rmsdataexchange.RmsdataexchangeService" />
            </list>
        </property>
    </bean>

    <!-- Define the PaymentInterceptor bean -->
    <bean id="paymentInterceptor" class="org.openmrs.module.rmsdataexchange.advice.PaymentInterceptor">
